<Page x:Class="System_Cont.Views.EscritorioFormPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:System_Cont.Views"
      mc:Ignorable="d" 
      Title="EscritorioFormPage" Height="620" Width="1380">

    <Grid Background="#1E1E1E">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal">
            <Rectangle Width="513" Height="206" Fill="#FF0A0D10" Margin="100 0 0 0" RadiusX="15" RadiusY="15">
                <Rectangle.LayoutTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform/>
                        <TranslateTransform X="0" Y="0"/>
                    </TransformGroup>
                </Rectangle.LayoutTransform>
            </Rectangle>

            <Rectangle Width="604" Height="206" Fill="#FF0A0D10" Margin="100 0 0 0" RadiusX="15" RadiusY="15">
                <Rectangle.LayoutTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform/>
                        <TranslateTransform X="0" Y="0"/>
                    </TransformGroup>
                </Rectangle.LayoutTransform>
            </Rectangle>
        </StackPanel>

        <StackPanel Grid.Row ="1" Orientation="Horizontal">

            <Rectangle Width="252" Height="307" Fill="#FF0A0D10" HorizontalAlignment="Left" Margin="100 0 -130 0" RadiusX="15" RadiusY="15">
                <Rectangle.LayoutTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform/>
                        <TranslateTransform X="0" Y="0"/>
                    </TransformGroup>
                </Rectangle.LayoutTransform>
            </Rectangle>

            <TextBlock Text="Recebimentos" Foreground="White" FontSize="25" Width="180" Height="50" Margin="-100 -200 50 0" FontWeight="Bold"/>

            <Rectangle Width="252" Height="307" Fill="#FF0A0D10" HorizontalAlignment="Left" Margin="20 0 0 0" RadiusX="15" RadiusY="15">
                <Rectangle.LayoutTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform/>
                        <TranslateTransform X="0" Y="0"/>
                    </TransformGroup>
                </Rectangle.LayoutTransform>
            </Rectangle>

            <Rectangle Width="649" Height="200" Fill="#FF0A0D10" Margin="50 0 0 0" RadiusX="15" RadiusY="15">
                <Rectangle.LayoutTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform/>
                        <TranslateTransform X="0" Y="0"/>
                    </TransformGroup>
                </Rectangle.LayoutTransform>
            </Rectangle>
        </StackPanel>
    </Grid>
</Page>
