<Page x:Class="System_Cont.Views.EscritorioFormPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:System_Cont.Views"
      mc:Ignorable="d" 
      Title="EscritorioFormPage" Height="865" Width="1380">

    <Grid Background="#1E1E1E">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
        </Grid>
        
        <ScrollViewer Grid.RowSpan="2">
            <StackPanel>
                <StackPanel Grid.Row="0" Orientation="Horizontal">
                    <DataGrid Height="417" Width="1361" x:Name="dataGridCliente" IsReadOnly="true" Foreground="White"
                      AutoGenerateColumns="False" AlternatingRowBackground="#1E1E1E" AlternationCount="2" Grid.ColumnSpan="2" Background="#FF1E1E1E" FontSize="40" BorderBrush="#FF1F1F1F" 
                      FontStyle="Normal" FontWeight="Normal">>
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Recebimentos" Binding="{Binding NomeCliente}" Foreground="White" FontSize="24"  Width="680"/>
                            <DataGridTextColumn Header="Despesas" Binding="{Binding NomeCliente}" Foreground="White" FontSize="24"/>
                        </DataGrid.Columns>
                        
                    </DataGrid>

                </StackPanel>

                <StackPanel Grid.Row = "1" Orientation="Horizontal">
                    <StackPanel Grid.Column="2">
                        <Label Content="Cadastrar Recebimento"/>
                    </StackPanel>

                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
