<Page x:Class="System_Cont.Views.PerfilAdvFormPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:System_Cont.Views"
      mc:Ignorable="d" 
      d:DesignHeight="965" d:DesignWidth="1920"
      Title="PerfilAdvFormPage">

    <Grid Background="#1E1E1E">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="750"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0">
            <Border Margin="0, 80, 0, 0" Width="390" Height="490">
                <Border.Background>
                    <LinearGradientBrush>
                        <GradientStop Color="#FF282828"/>
                    </LinearGradientBrush>
                </Border.Background>
                <Image HorizontalAlignment="Center" Margin="0,30,0,0" VerticalAlignment="Top" Height="350" Width="350" Source="\Imagens\avatar.jpg"/>
                <Border.Clip>
                    <RectangleGeometry RadiusX="30" RadiusY="30" Rect="0,0,400,500"/>
                </Border.Clip>
            </Border>

        </StackPanel>
    </Grid>
</Page>
