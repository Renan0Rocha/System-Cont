<Page x:Class="System_Cont.Views.GestaoDadosFormPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:System_Cont.Views"
      mc:Ignorable="d" 
      d:DesignHeight="865" d:DesignWidth="1920"
      Title="GestaoDadosFormPage">
    
    
    <Grid Background="#FF1F2121">
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="765"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="1">
                    <StackPanel >
                        <Border Margin="0, 0, 0, 0" Width="300" Height="765" CornerRadius="0, 50, 0, 0">
                            <Border.Background>
                                <LinearGradientBrush>
                                    <GradientStop Color="#1C1D31"/>
                                </LinearGradientBrush>
                            </Border.Background>

                            <ListView x:Name="Listimg" Width="300" Height="765" SelectionChanged="DataGridImg_SelectionChanged" FlowDirection="RightToLeft" Foreground="#DDFFFFFF">
                                <ListView.View>
                                    <GridView>
                                        <GridViewColumn Header="IMG">
                                            <GridViewColumn.CellTemplate>
                                                <DataTemplate>
                                                    <StackPanel FlowDirection="LeftToRight">
                                                        <Image Source="{Binding Imagem}" Width="150" Height="150"/>
                                                        <TextBlock Text="{Binding Nome}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </StackPanel>
                                                </DataTemplate>
                                            </GridViewColumn.CellTemplate>
                                        </GridViewColumn>
                                    </GridView>
                                </ListView.View>
                            </ListView>

                            <Border.Clip>
                                <RectangleGeometry  RadiusX="0" RadiusY="50" Rect="0,0,500,765"/>
                            </Border.Clip>
                        </Border>
                    </StackPanel>
                </Grid>

            </Grid>

            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="180"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="280"/>
                        <ColumnDefinition Width="280"/>
                        <ColumnDefinition Width="280"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!--// Button Converter PDF in IMAGEM //-->
                    <StackPanel Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Center">
                        <Border Grid.Row="1" Grid.Column="1" CornerRadius="20" Margin="20">

                            <Border.Background>

                                <LinearGradientBrush StartPoint="0.75,0"
                                         EndPoint="0,1">

                                    <GradientStop Color="#DF208F"
                                      Offset="0.1" />

                                    <GradientStop Color="#DFCF20"
                                      Offset="0.8" />

                                </LinearGradientBrush>
                            </Border.Background>
                            <Grid>
                                <Border 
                                        Background="#FFFFFF"
                                        Height="110"
                                        Width="150"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Top"
                                        CornerRadius="20"
                                        Opacity="0.3"
                                        Margin="10,10,20,30" 
                                    />

                                <TextBlock
                                        Foreground="#FFFFFF"
                                        FontFamily="Oswald"
                                        FontSize="20"
                                        VerticalAlignment="Top"
                                        HorizontalAlignment="Left"
                                        Margin="30,20,0,0" ><Run Text="CONVERT"/><LineBreak/><Run Text=""/>
                                </TextBlock>
                                <TextBlock
                                       Foreground="#FFFFFF"
                                       FontFamily="Oswald"
                                       FontSize="15"
                                       VerticalAlignment="Top"
                                       HorizontalAlignment="Left"
                                       Margin="35,25,0,0" ><Run Text=""/><LineBreak/><Run Text="PDF IN IMAGE"/>
                                </TextBlock>
                                <Button x:Name ="PDFpIMG" Content="BT" Width="50" Height="35" HorizontalAlignment="Center" Grid.Row="1" VerticalAlignment="Center" Margin="10, 55, 20,30" Click="PDFpIMG_Click" Cursor="Hand"/>

                            </Grid>

                        </Border>
                    </StackPanel>

                    <!--// Button XXXXX //-->
                    <StackPanel Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center">
                        <Border Grid.Row="1" Grid.Column="1" CornerRadius="20" Margin="20">

                            <Border.Background>

                                <LinearGradientBrush StartPoint="0.75,0"
                                         EndPoint="0,1">

                                    <GradientStop Color="#27BDE9"
                                      Offset="0.1" />

                                    <GradientStop Color="#ABDB54"
                                      Offset="0.8" />

                                </LinearGradientBrush>
                            </Border.Background>
                            <Grid>
                                <Border 
                                    Background="#FFFFFF"
                                    Height="110"
                                    Width="150"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Top"
                                    CornerRadius="20"
                                    Opacity="0.3"
                                    Margin="10,10,20,30" 
                                />

                                <TextBlock
                                        Foreground="#FFFFFF"
                                        FontFamily="Oswald"
                                        FontSize="20"
                                        VerticalAlignment="Top"
                                        HorizontalAlignment="Left"
                                        Margin="30,20,0,0" ><Run Text="CONVERT"/><LineBreak/><Run Text=""/>
