                                </LinearGradientBrush>
                            </Border.Background>
                            
                            <Grid>
                                <Border 
                                    Background="#FFFFFF"
                                    Height="150"
                                    Width="180"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Top"
                                    CornerRadius="20"
                                    Opacity="0.3"
                                    Margin="10,10,20,30" 
                                />

                                <TextBlock
