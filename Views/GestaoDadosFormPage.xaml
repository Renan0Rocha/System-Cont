                                </TextBlock>
                                <Button x:Name ="X" Content="BT" Width="50" Height="35" HorizontalAlignment="Center" Grid.Row="1" VerticalAlignment="Center" Margin="10, 55, 20,30" Click="PDFpIMG_Click" Cursor="Hand"/>

                            </Grid>

                        </Border>
                    </StackPanel>

