<Window x:Class="System_Cont.Views.CadMovimentacaoFormWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:System_Cont.Views"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="CadMovimentacaoFormWindow" Height="450" Width="800" ResizeMode="NoResize" Background="#FF131419">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0">
            <StackPanel>
                <TextBlock Text="Adicionar Recebimento" FontSize="28" HorizontalAlignment="Center" Margin="0 20 0 0">
                    <TextBlock.Foreground>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="#FFFD749B"/>
                            <GradientStop Color="#FF281AC8" Offset="1"/>
                        </LinearGradientBrush>
                    </TextBlock.Foreground>
                </TextBlock>

                <TextBox x:Name="txtDescricaoRec" Style="{StaticResource Estilo_Placeholder}" Tag="Descrição" FontSize="19" Background="White" Margin="0 70 0 0" Width="316" Height="31" Cursor="Arrow"/>
                <TextBox x:Name="txtValorRec" Style="{StaticResource Estilo_Placeholder}" Tag="Valor R$" FontSize="19" Background="White" Margin="0 40 0 0" Width="316" Height="31"/>
                <DatePicker x:Name="dtpRecebimento"  Background="White" Width="316" Height="31" Margin="0 40 0 0"/>

                <Button x:Name="btnSalvarRec" Content="Salvar" FontSize="18" Width="108" Margin="0 45 0 0" Height="35" Click="btnSalvarRec_Click"/>
            </StackPanel>
        </Grid>

        <Grid Grid.Column="1">
            <StackPanel>
                <TextBlock Text="Adicionar Despesa" FontSize="28" HorizontalAlignment="Center" Margin="0 20 0 0">
                    <TextBlock.Foreground>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="#FFFD749B"/>
                            <GradientStop Color="#FF281AC8" Offset="1"/>
                        </LinearGradientBrush>
                    </TextBlock.Foreground>
                </TextBlock>

                <TextBox x:Name="txtDescricaoDes" Style="{StaticResource Estilo_Placeholder}" Tag="Descrição" FontSize="19" Background="White" Margin="0 70 0 0" Width="316" Height="31" FontWeight="Normal" Visibility="Visible"/>
                <TextBox x:Name="txtValorDes" Style="{StaticResource Estilo_Placeholder}" Tag="Valor R$" FontSize="19" Background="White" Margin="0 40 0 0" Width="316" Height="31"/>
                <DatePicker x:Name="dtpDespesa" Background="White" Width="316" Height="31" Margin="0 40 0 0"/>

                <Button x:Name="btnSalvarDes" Content="Salvar" FontSize="18" Width="108" Margin="0 45 0 0" Height="35" Click="btnSalvarDes_Click" Cursor="Hand"/>
            </StackPanel>
        </Grid>

    </Grid>
</Window>
